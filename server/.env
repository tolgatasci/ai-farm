# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=ai_farm
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_general_ci
DB_POOL_NAME=ai_farm_pool
DB_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=10

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
WEBSOCKET_PORT=8765
API_WORKERS=4
KEEP_ALIVE_TIMEOUT=30

# Logging Configuration
LOG_DIR=logs
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Resource Management
INACTIVE_THRESHOLD=300
PING_INTERVAL=30
MAX_CONNECTIONS=100

# Directory Paths
STATIC_DIR=static
MODELS_DIR=aggregated_models
CHECKPOINTS_DIR=checkpoints

# Cache Settings
CACHE_TTL=2
CLIENTS_CACHE_TTL=2

# Rate Limiting
RATE_LIMIT=60/minute